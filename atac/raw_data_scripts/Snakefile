rule bowtie2_mus:
    input:
        sample=[OUTDIR+"/atac/fastq/trimmed/{sample}_trimmed_1.fastq.gz", OUTDIR+"/atac/fastq/trimmed/{sample}_trimmed_2.fastq.gz"]
    output:
        temp(OUTDIR+"/atac/bam/{sample}.mus.bam")
    threads: 8
    resources:
        load=12
    params:
        index="/shared/projects/xci/ReferenceGenomes/mm10/bowtie2/mm10",
        extra="--local --very-sensitive-local --no-unal --no-mixed --no-discordant --phred33 -L 10 -X 700"
    log:
        "log/{sample}_bowtie2_mus.log"
    priority: 2
    wrapper:
        "0.78.0/bio/bowtie2/align"

rule samtools_sort_mus:
    input:
        OUTDIR+"/atac/bam/{sample}.mus.bam"
    output:
        temp(OUTDIR+"/atac/bam/{sample}.sorted.mus.bam")
    threads: 8
    log:
        "log/{sample}_samtools_sort_mus.log"
    priority: 2
    shell:
        "(samtools sort -@ {threads} \
            -o {output} \
            {input}) 2> {log}"

rule mus_index:
    input: OUTDIR+"/atac/bam/{sample}.sorted.mus.bam"
    output: temp(OUTDIR+"/atac/bam/{sample}.sorted.mus.bam.bai")
    log: "log/{sample}_index_mus.log"
    params:
        "" # optional params string
    priority: 3
    wrapper:
        "0.78.0/bio/samtools/index"

