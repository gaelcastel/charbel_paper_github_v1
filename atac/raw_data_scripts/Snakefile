rule samtools_idxstats_hg38:
    input:
        bam=OUTDIR+"/atac/bam/{sample}.hg38.uniq.bam",
        bai=OUTDIR+"/atac/bam/{sample}.hg38.uniq.bam.bai"
    output: OUTDIR+"/atac/bam/stats/{sample}.hg38.txt"
    log: "log/{sample}_stats_hg38.txt"
    priority: 3
    shell:
        "(samtools idxstats {input.bam} > {output}) 2> {log}"

