rule samtools_sort_hg38:
    input:
        OUTDIR+"/atac/bam/{sample}.hg38.bam"
    output:
        temp(OUTDIR+"/atac/bam/{sample}.sorted.hg38.bam")
    threads: 8
    log:
        "log/{sample}_samtools_sort_hg38.log"
    priority: 2
    shell:
        "(samtools sort -@ {threads} \
            -o {output} \
            {input}) 2> {log}"

rule uniq_reads:
    input:
        bam=OUTDIR+"/atac/bam/{sample}.sorted.hg38.bam",
    output:
        temp(OUTDIR+"/atac/bam/{sample}.hg38.uniq.bam")
    params: qual=10
    priority: 3
    log:
        "log/{sample}_hg38_uniq.log"
    shell:
        "(samtools view -q {params.qual} -b {input.bam} > {output}) \
            2> {log}"

rule uniq_reads_mus:
    input:
        bam=OUTDIR+"/atac/bam/{sample}.sorted.mus.bam",
    output:
        temp(OUTDIR+"/atac/bam/{sample}.mus.uniq.bam")
    params: qual=10
    priority: 3
    log:
        "log/{sample}_mus_uniq.log"
    shell:
        "(samtools view -q {params.qual} -b {input.bam} > {output}) \
            2> {log}"

