rule MarkDuplicates:
    input: 
            bam=OUTDIR+"/atac/bam/{sample}.hg38.uniq.bam",
            bai=OUTDIR+"/atac/bam/{sample}.hg38.uniq.bam.bai"
    output: temp(OUTDIR+"/atac/bam/{sample}.hg38.dedupped.bam")
    params:
            CREATE_INDEX="true",
            VALIDATION_STRINGENCY="SILENT",
            REMOVE_DUPLICATES="true",
            ASSUME_SORTED="true",
            M="output.metrics"
    log:
        "log/{sample}_hg38_MarkDuplicates.log"
    priority: 6
    shell:
        "(picard MarkDuplicates \
            I={input.bam} \
            O={output} \
            CREATE_INDEX={params.CREATE_INDEX} \
            VALIDATION_STRINGENCY={params.VALIDATION_STRINGENCY} \
            REMOVE_DUPLICATES={params.REMOVE_DUPLICATES} \
            ASSUME_SORTED={params.ASSUME_SORTED} \
            M={params.M}) 2> {log}"

rule MarkDuplicates_mus:
    input: 
            bam=OUTDIR+"/atac/bam/{sample}.mus.uniq.bam",
            bai=OUTDIR+"/atac/bam/{sample}.mus.uniq.bam.bai"
    output: temp(OUTDIR+"/atac/bam/{sample}.mus.dedupped.bam")
    params:
            CREATE_INDEX="true",
            VALIDATION_STRINGENCY="SILENT",
            REMOVE_DUPLICATES="true",
            ASSUME_SORTED="true",
            M="output.metrics"
    log:
        "log/{sample}_mus_MarkDuplicates.log"
    priority: 6
    shell:
        "(picard MarkDuplicates \
            I={input.bam} \
            O={output} \
            CREATE_INDEX={params.CREATE_INDEX} \
            VALIDATION_STRINGENCY={params.VALIDATION_STRINGENCY} \
            REMOVE_DUPLICATES={params.REMOVE_DUPLICATES} \
            ASSUME_SORTED={params.ASSUME_SORTED} \
            M={params.M}) 2> {log}"

