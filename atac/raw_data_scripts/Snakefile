OUTDIR = config["OUTPUT_PATH"]
if(OUTDIR[-1] == "/") : OUTDIR = OUTDIR[:-1]

rule all:
    input:
        fastq_trimmed_fastqc=expand(OUTDIR+"/atac/fastqc_trimmed/{sample}_trimmed_{pair}_fastqc.html", sample=config["SAMPLES"], pair=["1","2"]),
        counts=expand(OUTDIR+"/atac/raw_counts_htseq/{sample}_raw_counts.txt", sample=config["SAMPLES"])

